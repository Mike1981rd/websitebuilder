<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Management System</title>
    
    <!-- Materialize CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" media="screen,projection" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/website-builder.css" asp-append-version="true" />
    
    @RenderSection("Styles", required: false)
</head>
<body class="website-builder-body">
    @RenderBody()
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function() {
            // Initialize dark mode
            const darkMode = localStorage.getItem('darkMode') === 'true';
            if (darkMode) {
                $('body').addClass('dark-mode');
            }
            
            // Check if coming from main layout and dispatch language event
            const currentLang = localStorage.getItem('preferredLanguage') || 'es';
            // Dispatch language changed event for WebsiteBuilder
            setTimeout(() => {
                document.dispatchEvent(new CustomEvent('languageChanged', { 
                    detail: { language: currentLang } 
                }));
            }, 100);
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>